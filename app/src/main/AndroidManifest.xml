<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.lovejoy777.rroandlayersmanager"
          android:process="com.android.Layers"
          android:sharedUserId="android.uid.Manager">

    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_ALL_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.WRITE_MEDIA_STORAGE"
        tools:ignore="ProtectedPermissions"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Layers"
        android:theme="@style/Base.Theme.Toolbar"
        tools:replace="android:label">

        <activity
            android:name=".MainActivity"
            android:label="Layers Manager"
            android:noHistory="true"
            android:theme="@style/Base.Theme.Toolbar.TransparentStatusBar">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".menu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Layers Manager"
            android:theme="@style/Base.Theme.Toolbar.TransparentStatusBar">
            <intent-filter android:label="Layers Manager">
                <action android:name="android.intent.action.MAIN1"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


        <activity
            android:name=".activities.DetailedTutorialActivity"
            android:label=""
            android:parentActivityName=".menu">
            <intent-filter>
                <action android:name="android.intent.action.INSTRUCTIONS"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label=""
            android:parentActivityName=".menu"
            android:theme="@style/Toolbar">
            <intent-filter>
                <action android:name="android.intent.action.ABOUT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.IntroActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="Layers"
            android:parentActivityName=".menu"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.OverlayDetailActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.Toolbar"/>


        <activity
            android:name=".activities.GoogleDriveActivity"
            android:label="Install layer">

            <!-- ... -->

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:host="drive.google.com"
                    android:pathPrefix="/file/" />
                <data android:scheme="http"
                    android:host="drive.google.com"
                    android:pathPrefix="/file/" />
            </intent-filter>
        </activity>

    </application>

</manifest>
