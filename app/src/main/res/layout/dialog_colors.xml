    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:orientation="vertical">

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
